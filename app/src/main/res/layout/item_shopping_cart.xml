<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_70sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/item_shoppingCart_partImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:padding="@dimen/_5sdp"
        android:scaleType="centerInside"
        android:src="@drawable/tire"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <ImageView
        android:id="@+id/item_shoppingCart_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_nav_cars_delete_car"
        android:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:layout_marginRight="@dimen/_5sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/item_shoppingCart_partName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/segoe_ui_sb"
        android:gravity="left"
        android:maxLines="2"
        android:text="Hankook Ventus Prime 3 K125"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_shoppingCart_partImage"
        app:layout_constraintRight_toLeftOf="@id/item_shoppingCart_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:id="@+id/item_shoppingCart_partNumberLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoe_ui_sb"
        android:gravity="left"
        android:text="Part Number :"
        android:textColor="@color/black"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintLeft_toLeftOf="@id/item_shoppingCart_partName"
        app:layout_constraintTop_toBottomOf="@id/item_shoppingCart_partName" />

    <TextView
        android:id="@+id/item_shoppingCart_partNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoe_ui_sb"
        android:gravity="left"
        android:paddingLeft="@dimen/_2sdp"
        android:paddingRight="@dimen/_2sdp"
        android:text="8808563390093"
        android:textColor="@color/black"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintLeft_toRightOf="@id/item_shoppingCart_partNumberLabel"
        app:layout_constraintRight_toRightOf="@id/item_shoppingCart_partName"
        app:layout_constraintTop_toBottomOf="@id/item_shoppingCart_partName" />


    <TextView
        android:id="@+id/item_shoppingCart_partPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoe_ui_sb"
        android:gravity="left"
        android:text="2399.00 EGP"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toRightOf="@id/item_shoppingCart_partImage"
        app:layout_constraintRight_toRightOf="@id/item_shoppingCart_partName"
        app:layout_constraintTop_toBottomOf="@id/item_shoppingCart_partNumberLabel" />


    <ImageView
        android:id="@+id/item_shoppingCart_increaseQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_1sdp"
        android:background="@drawable/ic_shopping_cart_increase"
        app:layout_constraintBottom_toBottomOf="@id/item_shoppingCart_partPrice"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintLeft_toRightOf="@id/item_shoppingCart_partImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_shoppingCart_partPrice" />

    <ImageView
        android:id="@+id/item_shoppingCart_decreaseQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_1sdp"
        android:background="@drawable/ic_shopping_cart_decrease"
        app:layout_constraintBottom_toBottomOf="@id/item_shoppingCart_partPrice"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toRightOf="@id/item_shoppingCart_partImage"
        app:layout_constraintRight_toLeftOf="@id/item_shoppingCart_increaseQuantity"
        app:layout_constraintTop_toTopOf="@id/item_shoppingCart_partPrice" />

    <TextView
        android:id="@+id/item_shoppingCart_partQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoe_ui_sb"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="@id/item_shoppingCart_partPrice"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toRightOf="@id/item_shoppingCart_decreaseQuantity"
        app:layout_constraintRight_toLeftOf="@id/item_shoppingCart_increaseQuantity"
        app:layout_constraintTop_toTopOf="@id/item_shoppingCart_partPrice" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/grey_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.9" />


</androidx.constraintlayout.widget.ConstraintLayout>