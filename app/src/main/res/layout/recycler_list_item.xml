<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_15sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_15sdp"
    android:elevation="0dp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="0dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/style_grey_stroke_line">


        <ImageView
            android:id="@+id/delivery_itemImage"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:adjustViewBounds="true"
            android:padding="@dimen/_10sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_delivery_quick_check"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.3" />


        <TextView
            android:id="@+id/delivery_itemLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:fontFamily="@font/segoe_ui_sb"
            android:paddingLeft="@dimen/_3sdp"
            android:text="Quick check"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="@id/delivery_itemImage"
            app:layout_constraintLeft_toRightOf="@id/delivery_itemImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.15" />

        <TextView
            android:id="@+id/delivery_itemDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:fontFamily="@font/segoe_ui_sb"
            android:paddingLeft="@dimen/_3sdp"
            android:text="Order a truck to do a quick check on your car anywhere"
            android:textColor="@color/grey"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintBottom_toTopOf="@id/delivery_itemButton"
            app:layout_constraintLeft_toRightOf="@id/delivery_itemImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/delivery_itemLabel"
            app:layout_constraintVertical_bias="0.01" />

        <Button
            android:id="@+id/delivery_itemButton"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/style_btn_red_with_corners"
            android:text="Order now"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/_10sdp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>