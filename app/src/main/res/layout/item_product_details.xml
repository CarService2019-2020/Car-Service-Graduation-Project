<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_productDetails_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/segoe_ui_sb"
        android:text="Width [mm] :"
        android:textColor="@color/black"
        android:gravity="left"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_productDetails_value"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_productDetails_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoe_ui_sb"
        android:paddingHorizontal="@dimen/_5sdp"
        android:gravity="left"
        android:text="1.00"
        android:textColor="@color/grey"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toRightOf="@id/item_productDetails_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_productDetails_name"
        app:layout_constraintBottom_toBottomOf="@id/item_productDetails_name"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/grey_line"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintLeft_toLeftOf="@id/item_productDetails_name"
        app:layout_constraintRight_toRightOf="@id/item_productDetails_value"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_productDetails_name"
        />
</androidx.constraintlayout.widget.ConstraintLayout>